<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/hint_separator"
        app:layout_constraintGuide_percent="0.35"

        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hint_separator"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/placeholder"
            android:textAlignment="center"
            android:id="@+id/hint_description"
            app:autoSizeTextType="uniform"


            />

    </android.support.v7.widget.CardView>



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@id/hint_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        >



        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hint_guideline_left"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33"
            />

        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hint_guideline_right"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66"
            />



        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hint_left_card"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/hint_guideline_left"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/placeholder"
                android:textAlignment="center"
                android:id="@+id/hint_textView_left"
                app:autoSizeTextType="uniform"


                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hint_middle_card"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/hint_guideline_right"
            app:layout_constraintLeft_toLeftOf="@id/hint_guideline_left"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/placeholder"
                android:textAlignment="center"
                android:id="@+id/hint_textView_middle"
                app:autoSizeTextType="uniform"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hint_right_card"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/hint_guideline_right"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/placeholder"
                android:textAlignment="center"
                android:id="@+id/hint_textView_right"
                app:autoSizeTextType="uniform"
                />

        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>